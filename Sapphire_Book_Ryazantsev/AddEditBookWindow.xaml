<Window x:Class="Sapphire_Book_Ryazantsev.AddEditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sapphire_Book_Ryazantsev"
        mc:Ignorable="d"
        Title="AddEditBookWindow" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Название -->
        <TextBlock Text="Название:" Grid.Row="0" Margin="0,5"/>
        <TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

        <!-- Автор -->
        <TextBlock Text="Автор:" Grid.Row="1" Margin="0,5"/>
        <ComboBox x:Name="cbAuthor" Grid.Row="1" Grid.Column="1" 
              DisplayMemberPath="AuthorName"
              SelectedValuePath="AuthorID"
              Margin="0,5"/>

        <!-- Категория -->
        <TextBlock Text="Категория:" Grid.Row="2" Margin="0,5"/>
        <TextBox Text="{Binding Category}" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

        <TextBlock Text="Жанр:" Grid.Row="3" Margin="0,5"/>
        <ComboBox x:Name="cbGenre" Grid.Row="3" Grid.Column="1" 
              DisplayMemberPath="GenreName"
              SelectedValuePath="GenreID"
              Margin="0,5"/>

        <!-- Описание -->
        <TextBlock Text="Описание:" Grid.Row="4" Margin="0,5"/>
        <TextBox Text="{Binding Description}" Grid.Row="4" Grid.Column="1" Margin="0,5"/>

      
        <TextBlock Text="Полка:" Grid.Row="5" Margin="0,5"/>
        <ComboBox x:Name="cbShelf" Grid.Row="5" Grid.Column="1" 
              DisplayMemberPath="ShelfLocation"
              SelectedValuePath="ShelfID"
              Margin="0,5"/>

        <!-- Статус -->
        <TextBlock Text="Статус:" Grid.Row="6" Margin="0,5"/>
        <TextBox Text="{Binding Status}" Grid.Row="6" Grid.Column="1" Margin="0,5"/>

        <!-- Путь к изображению -->
        <TextBlock Text="Имя файла изображения:" Grid.Row="7" Margin="0,5"/>
        <TextBox Text="{Binding ImagePath}" Grid.Row="7" Grid.Column="1" Margin="0,5" x:Name="txtImagePath"/>

        <!-- Кнопка выбора файла -->
        <Button Content="Выбрать изображение..."
                Grid.Row="8" 
                Grid.Column="1" 
                Click="SelectImage_Click"
                HorizontalAlignment="Left"
                Width="200"
                Margin="0,10"/>

        <!-- Превью изображения -->
        <Image x:Name="imgPreview"
               Grid.Row="9"
               Grid.Column="1"
               Width="200"
               Height="200"
               Stretch="UniformToFill"
               Margin="0,10"/>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="10" 
                    Grid.Column="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Сохранить" 
                    Click="Save_Click"
                    Width="100"
                    Margin="5"
                    IsDefault="True"/>
            <Button Content="Отмена" 
                    Click="Cancel_Click"
                    Width="100"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
